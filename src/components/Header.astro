---
import HeaderLink from './HeaderLink.astro';
import logo from "../assets/analyticalbyte.png";
---

<header>
	<nav>
		<h2><a href="/">
			<img width="187" height="45" alt="AnalyticalByte logo" src={logo.src} id="headlogo" />
			<span class="screenreader-only">AnalyticalByte: home</span>
		</a></h2>
		
		<div class="internal-links">
			<HeaderLink href="/">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0.5em 1em;
	}
	#headlogo {
		margin-top: 0.5em;
		height: 2.5em;
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		text-decoration: none;
	}

	@media (max-width: 430px) {
		.internal-links {
			display: none;
		}
	}

	.screenreader-only {
		border: 0;
		clip: rect(0 0 0 0);
		height: 1px;
		margin: -1px;
		overflow: hidden;
		padding: 0;
		position: absolute;
		width: 1px;
	}
</style>
